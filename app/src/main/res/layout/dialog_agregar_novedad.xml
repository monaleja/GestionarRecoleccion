<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/llAgregarNovedad"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:text="Agregar Novedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAgregarNovedad"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            tools:ignore="InefficientWeight"
            style="@style/tpmTitulo"
            android:textSize="24dp" />

        <TextView
            android:text="Orden cargue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrdenCargue"
            style="@style/tpmEtiqueta"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvOrdenCargueCodigo"
            android:layout_weight="0.05"
            android:textSize="20dp" />

        <TextView
            android:text="Tipo Novedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTipoNovedad"
            style="@style/tpmEtiqueta"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:id="@+id/spTipoNovedad"/>

        <TextView
            android:text="ObservaciÃ³n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvObservacion"
            style="@style/tpmEtiqueta"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etObservacion"
            android:layout_weight="0.08" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:id="@+id/llhBuscarHelpdesk">

            <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnGuardarNovedad"
                android:layout_weight="1"
                android:onClick="guardarNovedad" />

            <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelarNovedad"
                android:layout_weight="1"
                android:onClick="cancelarNovedad" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>